<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/dialog_bg"
    app:cardCornerRadius="8dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/dialog_bg">

        <TextView
            android:id="@+id/delete_quiz_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_16sdp"
            android:layout_marginTop="@dimen/_18sdp"
            android:fontFamily="@font/noto_sans_bold"
            android:text="Delete quiz !"
            android:textColor="@color/primary_text"
            android:textSize="@dimen/_14ssp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/sure_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_14sdp"
            android:fontFamily="@font/noto_sans"
            android:text="Sure.. Do you want to delete quiz ?"
            android:textColor="@color/primary_text"
            android:textSize="@dimen/_10ssp"
            app:layout_constraintStart_toStartOf="@id/delete_quiz_text"
            app:layout_constraintTop_toBottomOf="@id/delete_quiz_text" />


        <com.google.android.material.button.MaterialButton
            android:id="@+id/delete_yes_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            app:strokeWidth="@dimen/_1sdp"
            app:strokeColor="@color/colorLightText"
            app:cornerRadius="@dimen/_6sdp"
            android:layout_marginTop="@dimen/_24sdp"
            android:layout_marginBottom="@dimen/_16sdp"
            android:fontFamily="@font/noto_sans"
            android:text="Delete"
            android:textAllCaps="false"
            android:textColor="@color/primary_text"
            android:textSize="@dimen/_10ssp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="@id/sure_text"
            app:layout_constraintTop_toBottomOf="@+id/sure_text" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/dont_delete_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            app:strokeWidth="@dimen/_1sdp"
            app:strokeColor="@color/colorLightText"
            app:cornerRadius="@dimen/_6sdp"
            android:layout_marginEnd="@dimen/_16sdp"
            android:fontFamily="@font/noto_sans"
            android:text="Cancel"
            android:textAllCaps="false"
            android:textColor="@color/primary_text"
            android:textSize="@dimen/_10ssp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/delete_yes_btn" />


    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>