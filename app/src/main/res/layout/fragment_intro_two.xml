<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".views.fragments.IntroFragmentTwo">

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/intro_two_anim"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="24dp"
        app:layout_constraintBottom_toTopOf="@id/intro_two_text"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:lottie_autoPlay="true"
        app:lottie_loop="true"
        app:lottie_rawRes="@raw/share_anim" />

    <TextView
        android:id="@+id/intro_two_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        android:gravity="center"
        android:text="Share your created quiz with unique quiz id"
        android:textSize="22sp"
        android:textColor="@color/my_purple"
        android:fontFamily="@font/work_sans_medium"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@id/intro_two_anim"
        app:layout_constraintEnd_toEndOf="@id/intro_two_anim"/>

</androidx.constraintlayout.widget.ConstraintLayout>