<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="24dp"
    android:background="@drawable/dialog_bg">

    <TextView
        android:id="@+id/share_quiz_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="24dp"
        android:fontFamily="@font/noto_sans"
        android:text="Share this unique quiz ID with others in order to let them participate in this quiz."
        android:textColor="@color/my_purple"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/quiz_unique_id"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:fontFamily="@font/noto_sans"
        android:gravity="start"
        android:text="Unique ID: ksdjfls5d4fs5ddfdkffdf4d65d4f"
        android:textColor="@color/colorLightText"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="@+id/share_quiz_text"
        app:layout_constraintStart_toStartOf="@+id/share_quiz_text"
        app:layout_constraintTop_toBottomOf="@id/share_quiz_text" />

    <ImageButton
        android:id="@+id/copy_id_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/colorDark"
        android:src="@drawable/ic_baseline_content_copy_24"
        app:layout_constraintBottom_toBottomOf="@+id/share_id_button"
        app:layout_constraintEnd_toStartOf="@+id/share_id_button"
        app:layout_constraintTop_toTopOf="@+id/share_id_button" />

    <ImageButton
        android:id="@+id/share_id_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="12dp"
        android:layout_marginBottom="12dp"
        android:backgroundTint="@color/colorDark"
        android:src="@drawable/ic_baseline_share_24"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/quiz_unique_id" />


</androidx.constraintlayout.widget.ConstraintLayout>